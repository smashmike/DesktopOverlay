<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopOverlayUI.pages.overlayMenu"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="DesktopOverlayUI.pages.overlayMenu.ImagesTab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImagesTab">

    <Grid>
        <ui:TextBlock HorizontalAlignment="Left" Margin="12" TextWrapping="Wrap" Text="Loaded Images" VerticalAlignment="Top" FontSize="20"/>
        <ui:ListView ItemsSource="{Binding ImageList}">
            <ListView.ItemTemplate>
                <DataTemplate 
                    <TextBlock Margin="0,5,0,5" Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ui:ListView>


    </Grid>
</Page>
