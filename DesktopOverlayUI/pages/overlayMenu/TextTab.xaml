<Page x:Class="DesktopOverlayUI.pages.overlayMenu.TextTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopOverlayUI.pages.overlayMenu"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextTab">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Margin="16">
            <ui:TextBlock Text="Overlay Text"  FontTypography="Subtitle" />
            <ui:RichTextBox x:Name="textInputBox" Margin="8,8,8,0" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Stretch" MaxHeight="34" MaxWidth="368"/>
            <WrapPanel>
                <ui:Button Content="Update" Margin="12,0,0,0" Appearance="Primary"/>
                <ui:Button Content="Clear" Margin="8" Click="clearText" />
            </WrapPanel>
        </StackPanel>
        

        <Border Margin="16" Grid.Column="0" CornerRadius="10" Grid.Row="1">
            
        </Border>

    </Grid>
</Page>
