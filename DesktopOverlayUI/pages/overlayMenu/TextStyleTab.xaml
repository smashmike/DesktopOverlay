<Page x:Class="DesktopOverlayUI.pages.overlayMenu.TextStyleTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopOverlayUI.pages.overlayMenu"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TextStyleTab">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="16">
            <StackPanel x:Name="FontFamilyPanel" Margin="0,8,0,8" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ui:TextBlock Text="Font Family" FontTypography="Subtitle" Margin="0,0,0,8" />
                <ComboBox x:Name="FontFamilyComboBox" Width="200" ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="FontSizePanel" Margin="0,8,0,8" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ui:TextBlock Text="Font Size" FontTypography="Subtitle" Margin="0,0,0,8" />
                <WrapPanel Orientation="Horizontal">
                    <Slider x:Name="FontSizeSlider" Width="200" Maximum="72" Value="12" TickFrequency="4" />
                    <ui:TextBlock x:Name="FontSizeValueBox" MaxWidth="48" MinWidth="48" Margin="8,0,0,0" Text="{Binding Value, ElementName=FontSizeSlider}" FontTypography="BodyStrong"/>
                </WrapPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="16">
            <ui:TextBlock Text="Font Color" FontTypography="Subtitle" />
            <WrapPanel Orientation="Horizontal">
                <StackPanel>
                    <WrapPanel x:Name="RedSliderPanel" Margin="0,8,0,8">
                        <Slider x:Name="RedSlider" Width="200" Maximum="255" Value="0" TickFrequency="15" ValueChanged="UpdateColorPreview" LargeChange="15" SmallChange="1"/>
                        <ui:TextBlock x:Name="RedValueBox" MaxWidth="48" MinWidth="48" Margin="8,0,0,0" Text="{Binding Value, ElementName=RedSlider}" FontTypography="BodyStrong"/>
                    </WrapPanel>
                    <WrapPanel x:Name="GreenSliderPanel" Margin="0,8,0,8">
                        <Slider x:Name="GreenSlider" Width="200" Maximum="255" Value="0" TickFrequency="15" ValueChanged="UpdateColorPreview" LargeChange="15" SmallChange="1"/>
                        <ui:TextBlock x:Name="GreenValueBox" MaxWidth="48" MinWidth="48" Margin="8,0,0,0" Text="{Binding Value, ElementName=GreenSlider}" FontTypography="BodyStrong"/>
                    </WrapPanel>
                    <WrapPanel x:Name="BlueSliderPanel" Margin="0,8,0,8">
                        <Slider x:Name="BlueSlider" Width="200" Maximum="255" Value="0" TickFrequency="15" ValueChanged="UpdateColorPreview" SmallChange="1" LargeChange="15"/>
                        <ui:TextBlock x:Name="BlueValueBox" MaxWidth="48" MinWidth="48" Margin="8,0,0,0" Text="{Binding Value, ElementName=BlueSlider}" FontTypography="BodyStrong"/>
                    </WrapPanel>
                </StackPanel>
                <Border x:Name="ColorPreview" Width="50" Height="100" Background="Black" Margin="8,0,0,0" CornerRadius="4"/>
            </WrapPanel>

        </StackPanel>
    </Grid>
</Page>
