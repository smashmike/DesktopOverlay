<ui:FluentWindow x:Class="DesktopOverlayUI.testWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopOverlayUI"
        xmlns:pages="clr-namespace:DesktopOverlayUI.pages"
        
        
		xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
		ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
		ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
		
        Title="MainWindow" Height="450" Width="800" 
        WindowCornerPreference="Round"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Acrylic" WindowStyle="None" ResizeMode="NoResize"
        
        
        
       
				 >
    <ui:FluentWindow.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <ControlTemplate x:Key="itemButtonTemplate" TargetType="local:NavigationItem">
                <ui:Button  
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Center" 
                    Width="125" 
                    CornerRadius="4" 
                    Padding="0,0,0,0" 
                    HorizontalContentAlignment="Left" 
                    MinHeight="40" 
                    Background="{TemplateBinding Background}" 
                    MouseOverBackground="{ui:ThemeResource ControlStrokeColorDefaultBrush}" 
                    PressedBackground="{ui:ThemeResource ControlStrokeColorDefaultBrush}" Margin="0,1,0,1" BorderBrush="#00000000" 
                    
                    >
                    <ui:Button.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="ContentBorder" Padding="0" Margin="0" Grid.Row="0" >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <ContentControl
                                            x:Name="IconContentPresenter"
                                            Margin="-1,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                    </Grid>
                                    <Rectangle
                                        x:Name="ActiveRectangle"
                                        Grid.Column="0"
                                        Width="3"
                                        Height="16"
                                        Margin="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Fill="{ui:ThemeResource AccentTextFillColorSecondaryBrush}"
                                        Visibility="{Binding Path=IsSelected, Converter={StaticResource BooleanToVisibilityConverter }}"
                                        Opacity="0"
                                        RadiusX="2"
                                        RadiusY="2"/>      
                                    <ContentPresenter Grid.Column="1" Content="{TemplateBinding Content}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ui:Button.Content>

                </ui:Button>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsSelected" Value="true">
                        <Setter TargetName="ActiveRectangle" Property="Opacity" Value="1"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
            <DataTemplate x:Key="itemTemplateTest">
                <ui:Button Content="Item" VerticalAlignment="Top" HorizontalAlignment="Center" Width="120" />

            </DataTemplate>
        </ResourceDictionary>
    </ui:FluentWindow.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ui:TitleBar HorizontalAlignment="Right" Height="32" Width="800"/>
        <Grid Margin="0,56,675,12">
            <Grid x:Name="itemGrid" Margin="0,48,0,48">
                <ui:DynamicScrollViewer Margin="0,0,0,25">
                    <StackPanel x:Name="itemStackPanel" Orientation="Vertical">
