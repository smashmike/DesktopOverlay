                        </ui:Button>-->

                    </StackPanel>
                </ui:DynamicScrollViewer>

            </Grid>
            <ui:Button Content="New Element" VerticalAlignment="Top" Width="125" Click="newItem" Height="48" CornerRadius="4,4,0,0" BorderThickness="0,0,0,1" HorizontalAlignment="Center">

                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Add48"/>
                </ui:Button.Icon>
            </ui:Button>
            <ui:Button Content="Settings" VerticalAlignment="Top" Width="125" Height="48" Click="newItem" Margin="0,334,0,0" Appearance="Secondary" CornerRadius="0,0,4,4" BorderThickness="0,1,0,0" HorizontalAlignment="Center">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Settings48"/>
                </ui:Button.Icon>
            </ui:Button>
        </Grid>
        <Grid  x:Name="frameGrid" Margin="130,37,10,10">
            <Border  Background="{ui:ThemeResource CardBackgroundFillColorSecondaryBrush }" BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}" CornerRadius="10" x:Name="frameBorder"  Height="402" BorderThickness="1,1,1,1" >
