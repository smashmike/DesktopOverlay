<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopOverlayUI.dialogViews"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="DesktopOverlayUI.dialogViews.RenameView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RenameView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ui:TextBlock Text="Enter new name." Margin="16,0,0,0" FontTypography="BodyStrong" Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"/>
            <ui:TextBox x:Name="RenameTextbox" MaxLength="14" AcceptsTab="False" Height="37" Margin="16,8,12,12" Width="160" VerticalAlignment="Top"></ui:TextBox>
        </StackPanel>
    </Grid>
</Page>
